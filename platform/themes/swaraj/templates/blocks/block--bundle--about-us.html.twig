{% block blockcontent %}
  {% set image_path = base_path ~ 'themes/swaraj/images/' %}
  {% set nodes = [] %}
  {% for banner in full_content.field_about_us %}
    {% if banner['#paragraph'] %}
      {% set nodes = nodes | merge([banner['#paragraph']]) %}
    {% endif %}
  {% endfor %}
  <div data-block-id="{{ uuid }}">
    <section class="the-farmer">
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-md-push-2 CTR MTAL">
            <h4>{{ block_content.field_title.value }}</h4>
            {{ block_content.body.value|raw }}
          </div>
        </div>
        <div class="MT50">
          <div class="the-farmer-carousel owl-carousel green">
          {% for values in nodes %}
            <div>
              <div class="farmer-box">
                <figure><img alt="" class="normal-img lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(values.field_customer_image.entity.fileuri) }}">
                <img alt="" class="hover-img lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(values.field_customer_hover_image.entity.fileuri) }}"></figure>
                <h3>{{ values.field_name.value }}</h3>
                <p>{{ values.field_model_name.value|raw }}</p>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
  </div>
{% endblock %}
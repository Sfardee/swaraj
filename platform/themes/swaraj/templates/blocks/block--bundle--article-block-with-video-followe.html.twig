{% block blockcontent %}
	{% set image_path = base_path ~ 'themes/swaraj/images/' %}
	{% set random_id = random(10000000, 99999999) %}
    <div data-block-id="{{ uuid }}">
		<div class="article">
            <section class="article-qt-bx">
                <div class="container">
                    <div class="row">
                        {% if block_content.field_video_block.target_id %}
                        <div class="col-md-12 MT70">
                            <div class="play-icon-cont">
                                <a href="#myModalVideo{{ random_id }}" data-toggle="modal">
                                    <img src="{{ image_path }}play.png">
                                </a>
                                <div class="info">{{ block_content.field_video_block.entity.field_info.value }}</div>
                            </div>
                            <img class="full-width hidden-xs lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(block_content.field_video_block.entity.field_background_image.entity.field_media_image.entity.fileuri) }}" alt="{{ block_content.field_video_block.entity.field_background_image.entity.field_media_image.alt }}">
                            <img class="full-width visible-xs lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(block_content.field_video_block.entity.field_mobile_background_image.entity.field_media_image.entity.fileuri) }}" alt="{{ block_content.field_video_block.entity.field_mobile_background_image.entity.field_media_image.alt }}">
                        </div>
                        {% endif %}
                        {% if block_content.field_image_block.target_id %}
                        <div class="col-md-12 MT70">
                            <img class="full-width hidden-xs lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(block_content.field_image_block.entity.field_background_image.entity.field_media_image.entity.fileuri) }}" alt="{{ block_content.field_image_block.entity.field_background_image.entity.field_media_image.alt }}">
                            <img class="full-width visible-xs lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(block_content.field_image_block.entity.field_mobile_background_image.entity.field_media_image.entity.fileuri) }}" alt="{{ block_content.field_image_block.entity.field_mobile_background_image.entity.field_media_image.alt }}">
                        </div>
                        {% endif %}
                    </div>
                </div>
            </section>
        </div>
        {% if block_content.field_video_block.target_id %}
        <!-- Modal -->
        <div id="myModalVideo{{ random_id }}" class="modal fade youtube-video-box">
            <div class="container">
                <div class="close-video">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div>
                    <iframe id="SwarajVideo" width="100%" height="600" class="lozad" data-src="{{ block_content.field_video_block.entity.field_youtube_embed_link.value }}" frameborder="0"
                        allowfullscreen></iframe>
                </div>
            </div>
        </div>
        {% endif %}
	</div>
{% endblock %}


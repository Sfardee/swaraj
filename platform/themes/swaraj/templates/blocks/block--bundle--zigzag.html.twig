{% block blockcontent %}
  {% set image_path = base_path ~ 'themes/swaraj/images/' %}
  {% set nodes = [] %}
  {% for banner in full_content.field_zigzag %}
    {% if banner['#paragraph'] %}
      {% set nodes = nodes | merge([banner['#paragraph']]) %}
    {% endif %}
  {% endfor %}
  <div data-block-id="{{ uuid }}">
    <div class="container">
      <div class="overview hidden-sm">
        <div class="overview-wrapper">
        {% for key, values in nodes %}
        {% if key % 2 == 0 %}
          <div class="overview-box">
            <figure><img class="lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(values.field_model_image.entity.field_media_image.entity.fileuri) }}"></figure>
            <div class="overview-info">
              <h3>{{ values.field_name.value }}</h3>
              <h4>{{ values.field_number.value }}</h4>
              <div class="description">
              {{ values.field_description.value|raw }}
              </div>
              <p>
                <a class="btn btn-default green" href="{{ values.field_link.0.url }}">{{ values.field_link.0.title }}</a>
              </p>
            </div>
          </div>
          {% else %}
          <div class="overview-box box2">
            <figure><img class="lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(values.field_model_image.entity.field_media_image.entity.fileuri) }}"></figure>

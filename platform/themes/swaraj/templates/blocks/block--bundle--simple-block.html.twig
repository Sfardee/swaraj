{% block blockcontent %}
  {% set image_path = base_path ~ 'themes/swaraj/images/' %}
  <div data-block-id="{{ uuid }}">
    <div class="container">
      <div class="row">
      {% if block_content.field_alignment.value == 'left' %}
        <div class="col-md-12">
        {% else %}
        <div class="col-md-8 col-md-push-2 CTR MTAL">
        {% endif %}
        {% if block_content.field_title.value %}
          <h4>{{ block_content.field_title.value }}</h4>
        {% endif %}
        {% if block_content.body.value %}
          {{ block_content.body.value|raw }}
        {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block blockcontent %}
  {% set image_path = base_path ~ 'themes/swaraj/images/' %}
  {% set nodes = [] %}
  {% for customer in full_content.field_quick_tools %}
    {% if customer['#paragraph'] %}
      {% set nodes = nodes | merge([customer['#paragraph']]) %}
    {% endif %}
  {% endfor %}
  <div data-block-id="{{ uuid }}">
    <div class="clearfix"></div>
    <div class="PR">
      <div class="quick-tools">
        <ul>
          {% for values in nodes %}
          <li>
            <a href="{{ values.field_link.0.url }}"><img alt="" class="lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ file_url(values.field_customer_image.entity.fileuri) }}"><span>{{ values.field_name.value }}</span>
            </a>
          </li>
          {% endfor %}
        </ul>
        <div class="visible-xs visible-sm">
          <div class="all-products-quicklink">
            <a class="" href="products">All Products</a>
            <a class="quickLink" href="javascript:void(0)">Quick Links</a>
          </div>
        </div>
      </div>
    </div>
</div>
{% endblock %}
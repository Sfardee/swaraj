{% set image_path = base_path ~ 'themes/swaraj/images/' %}

<section class="common-section">
  <div class="container os-animation" data-os-animation-delay="0s" data-os-animation="fadeInUp">
    <div class="row">
      <div class="col-md-10 col-md-push-1 CTR MTAL">
        <h4>{{ data.title|trans }}</h4>
        <p>{{ data.subtitle|trans }}</p>
      </div>
    </div>
    {%if data.author %}
    <div class="row">
      <div class="col-md-10 col-md-push-1">
        <div class="row strong-base">
          <div class="imgbox">
            <img alt="" class="resize lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ data.img }}">
          </div>
          <div class="imgcontain">
            <div class="tesimonial-box">
              <p><img alt="" class="lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ image_path }}svg/tesimonial.svg" width="40"></p>
              {{ data.desc|raw }}
              <p class="name-box">{{ data.author }}</p>
              <p>{{ data.desi }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endif %}
  </div>
</section>

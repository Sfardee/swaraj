{% set image_path = base_path ~ 'themes/swaraj/images/' %}

<section class="features-box" id="features">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="h4 header4">{{ data.title|trans }}</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card-carousel owl-carousel green">
        {% for val in data.result %}
          <div class="os-animation" data-os-animation-delay=".5s" data-os-animation="fadeInUp">
            <div class="home-card">
              <figure>
                <a><img alt="" class="lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ val.image }}"></a>
              </figure>
            </div>
            <div class="info">
              <h5 class="card-title">
                <a>{{ val.title }}</a>
              </h5>
              {{ val.desc|raw }}
            </div>
          </div>
        {% endfor %}
        </div>
      </div>
    </div>

  </div>
</section>

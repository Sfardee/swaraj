{% set i = 1 %}
{% set j = 1 %}
{% set k = 1 %}

<section class="search-contentTab">
      <div class="container" >

        <div class="row">
          <div class="col-md-12">
            <div class="spec-list-box" style="margin-top:0px">

              <div class="wrapper-spec-list">
                <ul class="list-inline">
                {% for type in data.type %}
                {% if i == '1' %}
                  {% set active = 'active' %}
                {% else %}
                  {% set active = '' %}
                {% endif %}
                    <li class="{{ active }}">
                      <a data-toggle="tab" href="#{{ type }}">{{ type }}</a>
                    </li>
                  {% set i = i + 1 %}
                {% endfor %}
                </ul>
              </div>

              <div class="tab-content accordion">
              {% for key, type in data.data %}
                {% if j == '1' %}
                  {% set active = 'active' %}
                {% else %}
                  {% set active = '' %}
                {% endif %}
                <div class="tab-pane fade in {{ active }}" id="{{ key }}">
                {% for val in type %}
                  {% if k % 2 == 0 %}
                  <div class="white" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                  {% else %}
                  <div class="grey" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                  {% endif %}
                    <h6 class="mob-trgr" itemprop="name">{{ val.ques }}</h6>
                    <p class="mob-cont" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                      <span itemprop="text">{{ val.ans }}</span>
                    </p>
                  </div>
                {% set k = k + 1 %}
                {% endfor %}
                </div>
                {% set j = j + 1 %}
              {% endfor %}
              </div>

            </div>
          </div>
        </div>

      </div>
</section>

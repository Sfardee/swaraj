{% set i = 1 %}
{% set j = 1 %}

<div class="listing-tab-wrapper">
  <section class="listing-tab proDetail">
    <div class="container hidden-xs tabs-slider os-animation" data-os-animation-delay="0s" data-os-animation="fadeInUp">
      <div class="row">
        <div class="col-md-12 flexrow">
          {% for key, val in data %}
            {% if i == '1' %}
              {% set active = 'active' %}
            {% else %}
              {% set active = '' %}
            {% endif %}
            <div class="tabsnav {{ active }}">
              <a href="#{{ val }}">{{ key|trans }}</a>
            </div>
            {% set i = i + 1 %}
          {% endfor %}
        </div>
      </div>
    </div>


    <div class="container our-product visible-xs tabs-slider os-animation" data-os-animation-delay="0s" data-os-animation="fadeInUp">
      <ul>
        {% for key, val in data %}
          {% if j == '1' %}
            {% set active = 'active' %}
          {% else %}
            {% set active = '' %}
          {% endif %}
          <li class="{{ active }}">
            <a data-toggle="tab" href="#{{ val }}">{{ key|trans }}</a>
          </li>
          {% set j = j + 1 %}
        {% endfor %}
      </ul>
    </div>
  </section>
</div>

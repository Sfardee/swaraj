{% set image_path = base_path ~ 'themes/swaraj/images/' %}
{% set i = 1 %}
{% set j = 1 %}
{% set k = 1 %}
{% set l = 1 %}
{% set m = 1 %}
{% set n = 1 %}

<section class="listing-section-1">
  <div class="container os-animation" data-os-animation="fadeInUp" data-os-animation-delay="0s">
    <div class="row">
      <div class="col-md-12 CTR">
        <h4>{{ data.title }}</h4>
        <p>{{ data.subtitle }}</p>
      </div>
    </div>
  </div>
</section>
<div class="listing-tab-wrapper">
  <section class="listing-tab">
    <div class="container hidden-xs tabs-slider os-animation" data-os-animation="fadeInUp" data-os-animation-delay="0s">
        <div class="listing-tabs-carousel owl-carousel">
          {% for id, hp in data.engine %}
          {% if i == '1' %}
            {% set active = 'active' %}
          {% else %}
            {% set active = '' %}
          {% endif %}

            <div>
                <div class="tabsnav {{ active }}"><a data-toggle="tab" href="#Product{{ hp | trim | replace({' ': "-", '(':"", ')':"", '.':"_", 'किलोवाट':"kW"}) }}">{{ hp }}</a></div>
            </div>
          {% set i = i + 1 %}
          {% set l = l + 1 %}
          {% endfor %}
        </div>
    </div>
    <div class="container visible-xs our-product os-animation" data-os-animation="fadeInUp" data-os-animation-delay="0s">
      <ul>
          {% for id, hp in data.engine %}
        {% if j == '1' %}
          {% set active = 'active' %}
        {% else %}
          {% set active = '' %}
        {% endif %}
          <li class="{{ active }}">
            <a data-toggle="tab" href="#Product{{ hp | trim | replace({' ': "-", '(':"", ')':"", '.':"_", 'किलोवाट':"kW"}) }}">{{ hp }}</a>
          </li>
        {% set j = j + 1 %}
        {% set m = m + 1 %}
        {% endfor %}
      </ul>
    </div>
  </section>
</div>

<section class="product-list">
  <div class="tab-content">
  {% for type, power in data.product %}
  {% if k == '1' %}
    {% set active = 'active' %}
  {% else %}
    {% set active = '' %}
  {% endif %}
    <div class="tab-pane fade in {{ active }}" id="Product{{ type | trim | replace({' ': "-", '(':"", ')':"", '.':"_", 'किलोवाट':"kW"}) }}">
      <div class="container">
        <h3>{{ type }}</h3>
        {% for value in power|batch(3) %}
        {% if data.type == 'd' %}
          <div class="row list-item">
            {% for val in value %}
            <div class="col-md-4 product-details">
              <span></span>
              {% set link = val.link %}
              {% set lang = data.language %}

              {% if data.language != 'en' %}
                  {% set link = lang ~ link %}
                  <a class="full-link" href="/{{ link }}"></a>
              {% else %}
                  <a class="full-link" href="{{ val.link }}"></a>
              {% endif %}

              <figure class="visible-xs visible-sm"><img alt="" class="img-responsive lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ val.product_image }}">
                <figcaption>{{ val.title }}</figcaption>
              </figure>

              <div class="product-info hidden-xs hidden-sm">
                <figure><img alt="" class="img-responsive lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ val.product_image }}">
                </figure>
                <p class="product-title">{{ val.title }}</p>
                <div class="info">
                  <ul>
                    <li>
                      <p class="details">{% trans %}Cylinders{% endtrans %}</p>
                      :
                      <p class="details-info">{{ val.cyl }}</p>
                    </li>
                    <li>
                      <p class="details">{% trans %}Power{% endtrans %}</p>
                      :
                      <p class="details-info">{{ val.hp }}</p>
                    </li>
                    <li>
                      <p class="details">{% trans %}Engine{% endtrans %}</p>
                      :
                      <p class="details-info">{{ val.cc | raw }}</p>
                    </li>
                    <li>
                      <p class="details">Breaks</p>
                      :
                      <p class="details-info">{{ val.br }}</p>
                    </li>
                    <li>
                      <p class="details">{% trans %}PTO r/min{% endtrans %}</p>
                      :
                      <p class="details-info">{{ val.pto }}</p>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        {% else %}
          <div class="row list-item">
            {% for val in value %}
            <div class="col-md-4 product-details">
              <span></span>
              <a class="full-link" href="#"></a>
              <figure><img alt="" class="img-responsive lozad animated" style="animation-duration: 1.4s" data-animation="fadeInUp" data-src="{{ val.product_image }}">
                <figcaption>{{ val.title }}</figcaption>
              </figure>
            </div>
            {% endfor %}
          </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% set k = k + 1 %}
    {% set n = n + 1 %}
  {% endfor %}
  </div>
</section>
